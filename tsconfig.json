{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "target": "es2022",
    "module": "esnext",
    "allowJs": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "declarationDir": "dist/types",
    "declaration": true,
    "strict": true,
    "lib": [
      "es2017",
      "dom",
      "dom.iterable"
    ],
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true,
        "rules": {
          "no-unknown-tag-name": "off"
        }
      }
    ],
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@in/*": [
        "libs/components/*"
      ],
      "@in/data/*": [
        "libs/data/*"
      ],
      "@in/assets/*": [
        "libs/assets/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "libs/**/*",
    "node_modules/lit-scss-loader/types.d.ts"
  ],
  "files": [
    "src/index.ts"
  ]
}
